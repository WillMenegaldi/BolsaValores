@model IEnumerable<BolsaDeValores.Models.Actions>

@{
    ViewData["Title"] = "Ações à venda";
}

<h2>Ações à venda</h2>

@if (Program.currentClient.Admin)
{
    <p>
        <a asp-action="Create">Cadastrar nova ação</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
               Nome
            </th>
            <th>
               Dono
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Preço unitário
            </th>
            <th>
                Quantidade mínima de compra
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceQuant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantMinSell)
            </td>
            <td>
                @if (item.Status)
                {
                    <a asp-action="BuyAction" asp-route-id="@item.Id">Comprar ação</a>
                    @*<a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>*@
                }
            </td>
            </tr>
}
    </tbody>
</table>
